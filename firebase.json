{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 6061
    },
    "ui": {
      "enabled": true,
      "port": 4040
    }
  }
}
